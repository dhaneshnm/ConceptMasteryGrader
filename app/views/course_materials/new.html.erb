<div class="max-w-2xl mx-auto px-6 py-8">
  <div class="mb-8">
    <%= link_to "â† Back to Materials", course_materials_path, 
        class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>
  
  <div class="bg-white rounded-lg shadow-md border">
    <div class="px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Upload Course Material</h1>
      <p class="text-sm text-gray-600 mt-1">Upload a PDF document to create course content for AI evaluation</p>
    </div>
    
    <div class="p-6">
      <%= form_with(model: @course_material, local: true, multipart: true, 
                    class: "space-y-6") do |form| %>
        
        <% if @course_material.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Please correct the following errors:</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @course_material.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
        
        <div>
          <%= form.label :title, "Course Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{@course_material.errors[:title].any? ? 'border-red-500' : ''}", 
              placeholder: "e.g., Introduction to Machine Learning" %>
          <% if @course_material.errors[:title].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @course_material.errors[:title].first %></p>
          <% end %>
        </div>
        
        <div>
          <%= form.label :file, "PDF File", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-gray-400 transition-colors">
            <div class="space-y-1 text-center">
              <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              <div class="flex text-sm text-gray-600">
                <label for="course_material_file" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                  <span>Upload a PDF file</span>
                  <%= form.file_field :file, 
                      id: "course_material_file",
                      class: "sr-only", 
                      accept: ".pdf,application/pdf" %>
                </label>
                <p class="pl-1">or drag and drop</p>
              </div>
              <p class="text-xs text-gray-500">PDF files up to 10MB</p>
            </div>
          </div>
          <% if @course_material.errors[:file].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @course_material.errors[:file].first %></p>
          <% end %>
        </div>
        
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800">What happens after upload?</h3>
              <div class="mt-2 text-sm text-blue-700">
                <ol class="list-decimal list-inside space-y-1">
                  <li>Your PDF will be processed to extract text content</li>
                  <li>The text will be split into semantic chunks</li>
                  <li>AI embeddings will be generated for similarity search</li>
                  <li>You can then generate summaries, rubrics, and start evaluations</li>
                </ol>
              </div>
            </div>
          </div>
        </div>
        
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", course_materials_path, 
              class: "px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium transition-colors" %>
          <%= form.submit "Upload and Process", 
              class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  // Add file upload preview functionality
  document.getElementById('course_material_file').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
      const fileInfo = document.createElement('p');
      fileInfo.className = 'mt-2 text-sm text-gray-600';
      fileInfo.textContent = `Selected: ${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)`;
      
      // Remove any existing file info
      const existingInfo = e.target.parentNode.parentNode.querySelector('.file-info');
      if (existingInfo) {
        existingInfo.remove();
      }
      
      fileInfo.classList.add('file-info');
      e.target.parentNode.parentNode.appendChild(fileInfo);
    }
  });
</script>