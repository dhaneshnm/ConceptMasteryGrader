<div class="max-w-4xl mx-auto px-6 py-8">
  <div class="mb-8">
    <%= link_to "â† Back to #{@course_material.title}", @course_material, 
        class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>
  
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Summaries</h1>
    <p class="text-gray-600 mt-2">AI-generated summaries for <%= @course_material.title %></p>
  </div>

  <% if @summaries.any? %>
    <div class="space-y-6">
      <% @summaries.each do |summary| %>
        <div class="bg-white rounded-lg shadow-md border">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex justify-between items-start">
              <div>
                <h2 class="text-xl font-semibold text-gray-900">Course Summary</h2>
                <p class="text-sm text-gray-600 mt-1">
                  Generated on <%= summary.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
              <div class="flex space-x-2">
                <%= link_to "View Details", [@course_material, summary], 
                    class: "text-sm bg-blue-100 hover:bg-blue-200 text-blue-800 font-medium py-1 px-3 rounded transition-colors" %>
                <%= link_to "Delete", [@course_material, summary], 
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this summary?" },
                    class: "text-sm bg-red-100 hover:bg-red-200 text-red-800 font-medium py-1 px-3 rounded transition-colors" %>
              </div>
            </div>
          </div>
          
          <div class="p-6">
            <div class="prose max-w-none">
              <p class="text-gray-700 leading-relaxed">
                <%= truncate(summary.content, length: 300) %>
              </p>
            </div>
            
            <div class="mt-4 pt-4 border-t border-gray-200">
              <div class="grid gap-4 md:grid-cols-3 text-sm text-gray-600">
                <div>
                  <span class="font-medium">Length:</span>
                  <%= summary.content.length %> characters
                </div>
                <div>
                  <span class="font-medium">Chunks analyzed:</span>
                  <%= @course_material.chunks.count %>
                </div>
                <div>
                  <span class="font-medium">Status:</span>
                  <span class="text-green-600 font-medium">Complete</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md border">
      <div class="px-6 py-8 text-center">
        <div class="max-w-md mx-auto">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No summaries available</h3>
          <p class="mt-1 text-sm text-gray-500">
            Generate a summary to get an AI-powered overview of this course material.
          </p>
          <div class="mt-6">
            <% if @course_material.processed? %>
              <%= link_to "Generate Summary", [@course_material, :summaries], 
                  method: :post,
                  class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <% else %>
              <p class="text-sm text-orange-600 mb-4">
                Course material must be processed before generating a summary.
              </p>
              <span class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-gray-400 bg-gray-100 cursor-not-allowed">
                Generate Summary
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <div class="mt-8 bg-white rounded-lg shadow-md border">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Actions</h2>
      <p class="text-sm text-gray-600">Manage summaries for this course material</p>
    </div>
    <div class="p-6">
      <div class="grid gap-4 md:grid-cols-2">
        <% if @summaries.any? %>
          <div class="bg-yellow-50 rounded-lg p-4 border border-yellow-200">
            <h3 class="font-medium text-yellow-900 mb-2">Regenerate Summary</h3>
            <p class="text-sm text-yellow-700 mb-3">
              Create a new summary to replace the existing one.
            </p>
            <%= link_to "Regenerate", [@course_material, :summaries], 
                method: :post,
                data: { confirm: "This will replace the existing summary. Continue?" },
                class: "text-sm bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-1 px-3 rounded transition-colors" %>
          </div>
        <% else %>
          <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
            <h3 class="font-medium text-blue-900 mb-2">Generate Summary</h3>
            <p class="text-sm text-blue-700 mb-3">
              Create an AI-powered summary of this course material.
            </p>
            <% if @course_material.processed? %>
              <%= link_to "Generate", [@course_material, :summaries], 
                  method: :post,
                  class: "text-sm bg-blue-600 hover:bg-blue-700 text-white font-medium py-1 px-3 rounded transition-colors" %>
            <% else %>
              <span class="text-sm bg-gray-400 text-white font-medium py-1 px-3 rounded cursor-not-allowed">
                Material Not Processed
              </span>
            <% end %>
          </div>
        <% end %>
        
        <div class="bg-purple-50 rounded-lg p-4 border border-purple-200">
          <h3 class="font-medium text-purple-900 mb-2">Generate Rubrics</h3>
          <p class="text-sm text-purple-700 mb-3">
            Create assessment rubrics based on this course material.
          </p>
          <%= link_to "View Rubrics", [@course_material, :rubrics], 
              class: "text-sm bg-purple-600 hover:bg-purple-700 text-white font-medium py-1 px-3 rounded transition-colors" %>
        </div>
      </div>
    </div>
  </div>
</div>