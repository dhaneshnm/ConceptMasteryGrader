<div class="flex h-screen bg-gray-100">
  <!-- Sidebar with conversation info -->
  <div class="w-80 bg-white border-r border-gray-200 flex flex-col">
    <div class="p-6 border-b border-gray-200">
      <%= link_to "← Back", [@course_material, :conversations], 
          class: "text-blue-600 hover:text-blue-800 font-medium mb-4 block" %>
      
      <h2 class="text-lg font-semibold text-gray-900 mb-2">
        <%= @conversation.student.name %>
      </h2>
      <p class="text-sm text-gray-600 mb-4">
        <%= @conversation.student.email %>
      </p>
      
      <div class="bg-gray-50 rounded-lg p-3">
        <h3 class="font-medium text-gray-900 mb-2">Course Material</h3>
        <p class="text-sm text-gray-700"><%= @course_material.title %></p>
      </div>
    </div>
    
    <div class="flex-1 p-6" id="conversation_sidebar">
      <!-- Evaluation Status -->
      <div id="evaluation_status" class="mb-6">
        <% if @conversation.grade_reports.any? %>
          <%= render 'grade_reports/summary', 
                     grade_report: @conversation.grade_reports.order(created_at: :desc).first,
                     conversation: @conversation %>
        <% else %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
            <h3 class="font-medium text-gray-900 mb-2">Evaluation</h3>
            <p class="text-sm text-gray-600 mb-3">Generate an AI assessment of this conversation.</p>
            
            <% if @conversation.messages.from_user.count >= 2 && @conversation.course_material.rubrics.exists? %>
              <%= button_to "Start Evaluation", [@conversation.course_material, @conversation, :grade_reports],
                            method: :post,
                            data: { turbo_method: :post },
                            class: "w-full text-sm bg-blue-600 text-white px-3 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            <% else %>
              <div class="text-xs text-gray-500 bg-gray-50 rounded p-2">
                <% unless @conversation.messages.from_user.count >= 2 %>
                  <p>• Need at least 2 student messages</p>
                <% end %>
                <% unless @conversation.course_material.rubrics.exists? %>
                  <p>• Course material needs rubrics</p>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <h3 class="font-medium text-gray-900 mb-3">Assessment Progress</h3>
      
      <% if @course_material.rubrics.any? %>
        <div class="space-y-3">
          <% @course_material.rubrics.each do |rubric| %>
            <% 
              latest_report = @conversation.grade_reports.order(created_at: :desc).first
              concept_score = latest_report&.detailed_scores&.[](rubric.concept)&.[]('score') || 0
            %>
            <div class="bg-gray-50 rounded-lg p-3">
              <div class="flex justify-between items-center mb-1">
                <span class="text-sm font-medium text-gray-900"><%= rubric.concept %></span>
                <span class="text-xs text-gray-500">
                  <%= latest_report ? "#{(concept_score * 100).round}%" : "Not assessed" %>
                </span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-1">
                <div class="<%= latest_report ? 'bg-blue-500' : 'bg-gray-300' %> h-1 rounded-full" 
                     style="width: <%= (concept_score * 100).round %>%"></div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500">No rubrics available for assessment.</p>
      <% end %>
    </div>
    
    <div class="p-6 border-t border-gray-200">
      <%= link_to "End Evaluation", [@course_material, @conversation], 
          method: :delete,
          data: { confirm: "Are you sure you want to end this evaluation? All progress will be saved." },
          class: "w-full bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center block" %>
    </div>
  </div>
  
  <!-- Main chat interface -->
  <div class="flex-1 flex flex-col">
    <!-- Chat header -->
    <div class="bg-white border-b border-gray-200 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-xl font-semibold text-gray-900">Interactive Evaluation</h1>
          <p class="text-sm text-gray-600">AI Evaluator • Ready to assess understanding</p>
        </div>
        
        <div class="flex space-x-2">
          <span class="bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded-full">
            Active Session
          </span>
        </div>
      </div>
    </div>
    
    <!-- Messages area -->
    <div class="flex-1 overflow-hidden" data-controller="chat" data-chat-auto-scroll-value="true">
      <div class="h-full flex flex-col">
        <div class="flex-1 overflow-y-auto p-6 space-y-4" data-chat-target="messages" id="messages">
          <% if @messages.empty? %>
            <!-- Welcome message -->
            <div class="flex justify-start">
              <div class="max-w-xs lg:max-w-md">
                <div class="bg-blue-600 text-white rounded-lg px-4 py-2">
                  <p class="text-sm">
                    Hello <%= @conversation.student.name.split.first %>! I'm here to evaluate your understanding of the course material. 
                    Let's start with a discussion about the key concepts. What would you like to explore first?
                  </p>
                </div>
                <div class="text-xs text-gray-500 mt-1">AI Evaluator • just now</div>
              </div>
            </div>
          <% else %>
            <%= render partial: "messages/message", collection: @messages, as: :message %>
          <% end %>
          
          <!-- Typing indicator -->
          <div id="typing_indicator"></div>
        </div>
        
        <!-- Message form -->
        <div class="border-t border-gray-200 bg-white p-6" id="message_form">
          <%= render partial: "messages/form", locals: { conversation: @conversation, message: @new_message } %>
        </div>
      </div>
    </div>
  </div>
</div>