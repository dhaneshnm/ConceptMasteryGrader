<div class="space-y-8">
  <div class="mb-8">
    <%= link_to "â† Back to #{@course_material.title}", @course_material, 
        class: "nav-link text-lg" %>
  </div>
  
  <div class="section-header">
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6">
      <div>
        <h1 class="text-4xl font-bold text-neutral-800 mb-2">Evaluation Sessions</h1>
        <p class="text-lg text-neutral-600">Interactive student evaluations for enhanced learning</p>
      </div>
      
      <%= link_to "Start New Evaluation", new_course_material_conversation_path(@course_material), 
          class: "btn-primary btn-hover-lift" %>
    </div>
  </div>
  
  <% if @conversations.any? %>
    <div class="card">
      <div class="card-header">
        <h2 class="text-xl font-semibold text-neutral-800">Recent Sessions</h2>
      </div>
      
      <div class="divide-y divide-primary-100">
        <% @conversations.each do |conversation| %>
          <div class="p-8 hover:bg-primary-25 transition-colors">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="flex items-center space-x-4 mb-3">
                  <h3 class="text-lg font-semibold text-neutral-800">
                    <%= conversation.student.name %>
                  </h3>
                  <span class="text-neutral-600 text-sm">
                    (<%= conversation.student.email %>)
                  </span>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-sm text-neutral-600 mb-4">
                  <div>
                    <span class="font-medium text-neutral-700">Started:</span>
                    <div class="mt-1"><%= conversation.created_at.strftime("%b %d, %Y at %I:%M %p") %></div>
                  </div>
                  <div>
                    <span class="font-medium text-neutral-700">Messages:</span>
                    <div class="mt-1 text-primary-600 font-semibold"><%= conversation.messages.count %></div>
                  </div>
                  <div>
                    <span class="font-medium text-neutral-700">Status:</span>
                    <div class="mt-1">
                      <% if conversation.grade_reports.any? %>
                        <span class="status-badge bg-primary-100 text-primary-800">Evaluated</span>
                      <% elsif conversation.messages.any? %>
                        <span class="status-badge bg-accent-100 text-accent-800">In Progress</span>
                      <% else %>
                        <span class="status-badge bg-neutral-100 text-neutral-600">Not Started</span>
                      <% end %>
                    </div>
                  </div>
                </div>
                
                <% if conversation.messages.any? %>
                  <div class="mt-4 p-4 bg-primary-25 rounded-xl border border-primary-100">
                    <p class="text-sm text-neutral-700">
                      <strong class="text-neutral-800">Latest message:</strong>
                      <%= truncate(conversation.messages.last.content, length: 120) %>
                    </p>
                  </div>
                <% end %>
              </div>
              
              <div class="flex flex-col space-y-2 ml-6">
                <%= link_to "Continue", [@course_material, conversation], 
                    class: "bg-primary-100 hover:bg-primary-200 text-primary-800 font-medium py-2 px-4 rounded-xl text-sm transition-all duration-200" %>
                
                <% if conversation.grade_reports.any? %>
                  <%= link_to "View Report", "#", 
                      class: "bg-accent-100 hover:bg-accent-200 text-accent-800 font-medium py-2 px-4 rounded-xl text-sm transition-all duration-200" %>
                <% end %>
                
                <%= link_to "Delete", [@course_material, conversation], 
                    method: :delete,
                    data: { confirm: "Are you sure? This will delete all messages." },
                    class: "bg-red-50 hover:bg-red-100 text-red-700 font-medium py-2 px-4 rounded-xl text-sm transition-all duration-200" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="text-center py-16">
      <div class="mx-auto h-16 w-16 text-neutral-400 mb-6">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-full h-full">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.959 8.959 0 01-4.906-1.456L3 21l2.456-5.094A8.959 8.959 0 013 12c0-4.418 3.582-8 8-8s8 3.582 8 8z" />
        </svg>
      </div>
      <h3 class="text-2xl font-semibold text-neutral-800 mb-3">No evaluation sessions yet</h3>
      <p class="text-lg text-neutral-600 mb-8">Start your first interactive student evaluation to begin the assessment process.</p>
      
      <% if @course_material.processed? %>
        <%= link_to "Start Evaluation", new_course_material_conversation_path(@course_material), 
            class: "btn-primary btn-hover-lift" %>
      <% else %>
        <div class="alert alert-warning max-w-md mx-auto">
          Course material must be processed before starting evaluations.
        </div>
      <% end %>
    </div>
  <% end %>
</div>