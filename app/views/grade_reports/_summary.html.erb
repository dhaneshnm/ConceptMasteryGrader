<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-4">
  <div class="flex items-center justify-between">
    <div>
      <h4 class="text-sm font-medium text-gray-900">Latest Grade Report</h4>
      <p class="text-xs text-gray-500 mt-1">
        Generated <%= time_ago_in_words(grade_report.created_at) %> ago
      </p>
    </div>
    <div class="text-right">
      <div class="text-2xl font-bold text-blue-600">
        <%= (grade_report.overall_score * 100).round %>%
      </div>
      <div class="text-xs text-gray-500">
        <%= performance_level(grade_report.overall_score) %>
      </div>
    </div>
  </div>
  
  <!-- Mini Progress Bars for Concepts -->
  <div class="mt-3 space-y-2">
    <% grade_report.detailed_scores.first(3).each do |concept, details| %>
      <div class="flex items-center justify-between text-xs">
        <span class="text-gray-600 truncate max-w-24"><%= concept.titleize %></span>
        <div class="flex items-center space-x-2 flex-1 max-w-20 ml-2">
          <div class="flex-1 bg-gray-200 rounded-full h-1.5">
            <div class="bg-blue-600 h-1.5 rounded-full" style="width: <%= (details['score'] * 100).round %>%"></div>
          </div>
          <span class="text-gray-500 min-w-8 text-right"><%= (details['score'] * 100).round %>%</span>
        </div>
      </div>
    <% end %>
  </div>
  
  <!-- Action Button -->
  <div class="mt-4 pt-3 border-t border-gray-100">
    <%= link_to "View Full Report", [conversation.course_material, conversation, grade_report], 
                class: "text-xs text-blue-600 hover:text-blue-800 font-medium" %>
  </div>
</div>