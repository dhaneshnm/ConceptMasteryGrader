<div class="space-y-8">
  <div class="mb-8">
    <%= link_to "← Back to Materials", course_materials_path, 
        class: "nav-link text-lg" %>
  </div>
  
  <div class="card">
    <div class="card-header">
      <h1 class="text-3xl font-bold text-neutral-800"><%= @course_material.title %></h1>
      <div class="mt-3 flex items-center space-x-6 text-sm text-neutral-600">
        <span>Uploaded <%= @course_material.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        <span class="status-badge <%= status_badge_class(@processing_status) %>">
          <%= @processing_status.humanize %>
        </span>
      </div>
    </div>
    
    <div class="card-body">
      <% if @course_material.uploaded? %>
        <div class="alert alert-warning mb-8">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-secondary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-secondary-800">Processing in Progress</h3>
              <p class="mt-2 text-secondary-700">
                Your document is being processed. Text extraction and chunking are in progress.
                <span class="spinner inline-block ml-2"></span>
              </p>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="grid-responsive">
        <div class="card bg-neutral-50">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-neutral-800">
                File Information 
                <span class="text-sm font-normal text-neutral-600">
                  (<%= @course_material.files.count %> file<%= 's' if @course_material.files.count != 1 %>)
                </span>
              </h3>
              <% if @course_material.files.attached? && @course_material.files.any? %>
                <button 
                  id="toggle-files-btn" 
                  onclick="toggleFilesList()"
                  class="flex items-center space-x-2 text-neutral-600 hover:text-neutral-800 transition-colors"
                  aria-label="Toggle files list"
                >
                  <span id="toggle-text">Collapse</span>
                  <svg id="toggle-icon" class="w-5 h-5 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
              <% end %>
            </div>
            
            <% if @course_material.files.attached? && @course_material.files.any? %>
              <div id="files-list" class="space-y-4">
                <% @course_material.files.each_with_index do |file, index| %>
                  <div class="border border-neutral-200 rounded-lg p-4 bg-white">
                    <div class="flex items-start justify-between">
                      <div class="flex items-center space-x-3">
                        <div class="flex-shrink-0">
                          <svg class="h-8 w-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                          </svg>
                        </div>
                        <div>
                          <p class="font-medium text-neutral-800"><%= file.filename %></p>
                          <p class="text-sm text-neutral-600">
                            PDF • <%= number_to_human_size(file.byte_size) %>
                          </p>
                        </div>
                      </div>
                      <div class="flex space-x-2">
                        <%= link_to "Download", file, 
                            class: "text-blue-600 hover:text-blue-800 font-medium text-sm" %>
                      </div>
                    </div>
                  </div>
                <% end %>
                
                <% if @course_material.files.count > 1 %>
                  <div class="border-t border-neutral-200 pt-4 mt-4">
                    <div class="flex justify-between items-center text-sm text-neutral-600">
                      <span class="font-medium">Total Size:</span>
                      <span class="text-neutral-800">
                        <%= number_to_human_size(@course_material.files.sum(&:byte_size)) %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8 text-neutral-500">
                <svg class="mx-auto h-12 w-12 text-neutral-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                  <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <p class="mt-2">No files uploaded</p>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="bg-gray-50 rounded-lg p-4">
          <h3 class="font-semibold text-gray-900 mb-2">Processing Status</h3>
          <div class="space-y-2 text-sm text-gray-600">
            <div class="flex justify-between">
              <span>Text Chunks:</span>
              <span><%= @chunks_count %></span>
            </div>
            <div class="flex justify-between">
              <span>Summary:</span>
              <span><%= @summary.present? ? "Generated" : "Not yet generated" %></span>
            </div>
            <div class="flex justify-between">
              <span>Rubrics:</span>
              <span>
                <%= link_to @course_material.rubrics.count, [@course_material, :rubrics], 
                    class: "text-blue-600 hover:text-blue-800 font-medium" %>
              </span>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-50 rounded-lg p-4">
          <h3 class="font-semibold text-gray-900 mb-2">Usage</h3>
          <div class="space-y-2 text-sm text-gray-600">
            <div class="flex justify-between">
              <span>Conversations:</span>
              <span><%= @course_material.conversations.count %></span>
            </div>
            <div class="flex justify-between">
              <span>Evaluations:</span>
              <span><%= @course_material.conversations.joins(:grade_reports).count %></span>
            </div>
          </div>
        </div>
      </div>
      
      <% if @course_material.processed? %>
        <div class="mt-6 flex space-x-4">
          <% if @summary.blank? %>
            <%= button_to "Generate Summary", course_material_summary_path(@course_material), 
                method: :post,
                class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <% else %>
            <%= link_to "View Summary", [@course_material, :summary], 
                class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
          <% end %>
          
          <%= link_to "Manage Summaries", [@course_material, :summaries], 
              class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <% if @course_material.chunks.any? %>
    <div class="mt-8 bg-white rounded-lg shadow-md border">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Text Chunks Preview</h2>
        <p class="text-sm text-gray-600">First few chunks extracted from the document</p>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <% @course_material.chunks.limit(3).each_with_index do |chunk, index| %>
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex justify-between items-start mb-2">
                <span class="text-xs font-medium text-gray-500">Chunk <%= index + 1 %></span>
                <span class="text-xs text-gray-500"><%= chunk.text.length %> characters</span>
              </div>
              <p class="text-sm text-gray-700 leading-relaxed">
                <%= truncate(chunk.text, length: 300) %>
              </p>
            </div>
          <% end %>
          
          <% if @course_material.chunks.count > 3 %>
            <p class="text-sm text-gray-600 text-center">
              ... and <%= @course_material.chunks.count - 3 %> more chunks
            </p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  
  <% if @summary.present? %>
    <div id="summary-section" class="mt-8 bg-white rounded-lg shadow-md border">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Generated Summary</h2>
        <p class="text-sm text-gray-600">AI-generated comprehensive summary of the course material</p>
      </div>
      <div class="p-6">
        <div class="prose max-w-none">
          <%= markdown(@summary.content) %>
        </div>
        <div class="mt-4 pt-4 border-t border-gray-200 text-xs text-gray-500">
          Generated on <%= @summary.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% content_for :helpers do %>
  <%
    def status_badge_class(status)
      case status.to_s
      when 'uploaded'
        'bg-yellow-100 text-yellow-800'
      when 'processed'
        'bg-green-100 text-green-800'
      else
        'bg-gray-100 text-gray-800'
      end
    end
  %>
<% end %>

<script>
  function toggleFilesList() {
    const filesList = document.getElementById('files-list');
    const toggleIcon = document.getElementById('toggle-icon');
    const toggleText = document.getElementById('toggle-text');
    
    if (filesList.style.display === 'none') {
      // Expand
      filesList.style.display = 'block';
      toggleIcon.style.transform = 'rotate(0deg)';
      toggleText.textContent = 'Collapse';
    } else {
      // Collapse
      filesList.style.display = 'none';
      toggleIcon.style.transform = 'rotate(-90deg)';
      toggleText.textContent = 'Expand';
    }
  }
</script>