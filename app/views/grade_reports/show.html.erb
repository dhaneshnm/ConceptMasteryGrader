<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <!-- Header -->
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold text-gray-900">Grade Report</h2>
    <div class="flex items-center space-x-2 text-sm text-gray-500">
      <span>Generated:</span>
      <time datetime="<%= @grade_report.created_at&.iso8601 %>">
        <%= @grade_report.created_at&.strftime("%B %d, %Y at %I:%M %p") %>
      </time>
    </div>
  </div>
  
  <!-- Overall Score -->
  <div class="mb-8">
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-6 border border-blue-100">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Overall Performance</h3>
          <p class="text-gray-600"><%= @grade_report.feedback %></p>
        </div>
        <div class="text-right">
          <div class="text-4xl font-bold text-blue-600">
            <%= (@grade_report.overall_score * 100).round %>%
          </div>
          <div class="text-sm text-gray-500 mt-1">
            <%= performance_level(@grade_report.overall_score) %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Detailed Concept Scores -->
  <div class="mb-8">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Concept Assessment</h3>
    
    <div class="space-y-4">
      <% @grade_report.detailed_scores.each do |concept, details| %>
        <div class="border border-gray-200 rounded-lg p-4">
          <div class="flex items-center justify-between mb-3">
            <h4 class="font-medium text-gray-900"><%= concept.titleize %></h4>
            <div class="flex items-center space-x-2">
              <span class="px-3 py-1 rounded-full text-sm font-medium <%= level_badge_classes(details['level']) %>">
                <%= details['level']&.titleize %>
              </span>
              <span class="text-lg font-semibold text-gray-700">
                <%= (details['score'] * 100).round %>%
              </span>
            </div>
          </div>
          
          <!-- Progress Bar -->
          <div class="w-full bg-gray-200 rounded-full h-2 mb-3">
            <div class="bg-blue-600 h-2 rounded-full" style="width: <%= (details['score'] * 100).round %>%"></div>
          </div>
          
          <!-- Evidence and Feedback -->
          <% if details['evidence'].present? %>
            <div class="mb-3">
              <p class="text-sm font-medium text-gray-700 mb-1">Evidence:</p>
              <p class="text-sm text-gray-600 bg-gray-50 rounded p-2">
                <%= truncate(details['evidence'], length: 200) %>
              </p>
            </div>
          <% end %>
          
          <% if details['feedback'].present? %>
            <div>
              <p class="text-sm font-medium text-gray-700 mb-1">Feedback:</p>
              <p class="text-sm text-gray-600"><%= details['feedback'] %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Recommendations -->
  <% if @grade_report.recommendations.present? %>
    <div class="mb-8">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Learning Recommendations</h3>
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <ul class="space-y-2">
          <% @grade_report.recommendations.each do |recommendation| %>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-yellow-600 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-sm text-gray-700"><%= recommendation %></span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
  <!-- Actions -->
  <div class="flex items-center justify-between pt-6 border-t border-gray-200">
    <%= link_to "Back to Conversation", [@conversation.course_material, @conversation], 
                class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    
    <div class="flex space-x-3">
      <%= button_to "Delete Report", [@conversation.course_material, @conversation, @grade_report], 
                    method: :delete,
                    form: { data: { turbo_confirm: "Are you sure you want to delete this grade report?" } },
                    class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm bg-white text-sm font-medium text-red-700 hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      
      <%= link_to "Generate New Report", [@conversation.course_material, @conversation, :grade_reports], 
                  method: :post,
                  data: { turbo_method: :post, turbo_confirm: "Generate a new evaluation report?" },
                  class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm bg-blue-600 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
</div>