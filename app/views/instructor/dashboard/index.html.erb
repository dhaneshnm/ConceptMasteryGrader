<!-- Instructor Dashboard Layout -->
<div class="min-h-screen bg-gray-50">
  <!-- Navigation Header -->
  <nav class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <%= link_to "Grader AI", root_path, class: "text-xl font-bold text-blue-600" %>
          </div>
          <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
            <%= link_to "Dashboard", instructor_dashboard_index_path, 
                        class: "border-blue-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
            <%= link_to "Conversations", instructor_conversations_path,
                        class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
            <%= link_to "Analytics", instructor_analytics_path,
                        class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
          </div>
        </div>
        <div class="flex items-center">
          <span class="text-sm text-gray-500">Instructor View</span>
        </div>
      </div>
    </div>
  </nav>
  
  <!-- Page Header -->
  <div class="bg-white shadow">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold text-gray-900">Instructor Dashboard</h1>
      <p class="mt-1 text-sm text-gray-600">Monitor student progress and manage course evaluations</p>
    </div>
  </div>
  
  <!-- Dashboard Content -->
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Statistics Overview -->
    <div class="mb-8">
      <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
        <!-- Total Conversations -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Total Conversations</dt>
                  <dd class="text-lg font-medium text-gray-900"><%= @statistics[:total_conversations] %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Evaluated Conversations -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Evaluated</dt>
                  <dd class="text-lg font-medium text-gray-900"><%= @statistics[:evaluated_conversations] %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Average Score -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Average Score</dt>
                  <dd class="text-lg font-medium text-gray-900"><%= (@statistics[:average_score] * 100).round %>%</dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Students Needing Help -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.864-.833-2.634 0L4.18 16.5c-.77.833.192 2.5 1.732 2.5z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Need Help</dt>
                  <dd class="text-lg font-medium text-gray-900"><%= @statistics[:students_needing_help] %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Two Column Layout -->
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
      <!-- Recent Conversations -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Conversations</h3>
            <%= link_to "View All", instructor_conversations_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          
          <% if @recent_conversations.any? %>
            <div class="space-y-3">
              <% @recent_conversations.each do |conversation| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div class="flex-1">
                    <div class="flex items-center justify-between">
                      <h4 class="text-sm font-medium text-gray-900"><%= conversation.student.name %></h4>
                      <span class="text-xs text-gray-500"><%= time_ago_in_words(conversation.updated_at) %> ago</span>
                    </div>
                    <p class="text-sm text-gray-600 mt-1"><%= conversation.course_material.title %></p>
                    <div class="flex items-center mt-2 space-x-4 text-xs text-gray-500">
                      <span><%= conversation.messages.count %> messages</span>
                      <% if conversation.grade_reports.any? %>
                        <span class="text-green-600">âœ“ Evaluated</span>
                      <% else %>
                        <span class="text-yellow-600">Pending evaluation</span>
                      <% end %>
                    </div>
                  </div>
                  <div class="ml-4">
                    <%= link_to "View", [conversation.course_material, conversation], 
                                class: "text-blue-600 hover:text-blue-800 text-sm" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No recent conversations</p>
          <% end %>
        </div>
      </div>
      
      <!-- Recent Evaluations -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Evaluations</h3>
            <%= link_to "Analytics", instructor_analytics_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          
          <% if @recent_evaluations.any? %>
            <div class="space-y-3">
              <% @recent_evaluations.each do |evaluation| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div class="flex-1">
                    <div class="flex items-center justify-between">
                      <h4 class="text-sm font-medium text-gray-900"><%= evaluation.conversation.student.name %></h4>
                      <span class="text-lg font-bold <%= evaluation.overall_score >= 0.7 ? 'text-green-600' : 'text-red-600' %>">
                        <%= (evaluation.overall_score * 100).round %>%
                      </span>
                    </div>
                    <p class="text-sm text-gray-600 mt-1"><%= evaluation.conversation.course_material.title %></p>
                    <div class="text-xs text-gray-500 mt-2">
                      <%= time_ago_in_words(evaluation.evaluated_at) %> ago
                    </div>
                  </div>
                  <div class="ml-4">
                    <%= link_to "Details", [evaluation.conversation.course_material, evaluation.conversation, evaluation], 
                                class: "text-blue-600 hover:text-blue-800 text-sm" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No recent evaluations</p>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Course Materials -->
    <div class="mt-8">
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Course Materials</h3>
            <%= link_to "View All", course_materials_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          
          <% if @course_materials.any? %>
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
              <% @course_materials.each do |course_material| %>
                <div class="border border-gray-200 rounded-lg p-4">
                  <div class="flex items-center justify-between mb-2">
                    <h4 class="text-sm font-medium text-gray-900 truncate"><%= course_material.title %></h4>
                    <span class="text-xs text-gray-500"><%= course_material.conversations.count %> conversations</span>
                  </div>
                  
                  <div class="space-y-2 text-xs text-gray-600">
                    <div class="flex justify-between">
                      <span>Summaries:</span>
                      <span><%= course_material.summaries.count %></span>
                    </div>
                    <div class="flex justify-between">
                      <span>Rubrics:</span>
                      <span><%= course_material.rubrics.count %></span>
                    </div>
                    <div class="flex justify-between">
                      <span>Evaluations:</span>
                      <span><%= course_material.conversations.joins(:grade_reports).distinct.count %></span>
                    </div>
                  </div>
                  
                  <div class="mt-3 flex space-x-2">
                    <%= link_to "View", course_material, 
                                class: "text-xs text-blue-600 hover:text-blue-800" %>
                    <%= link_to "Conversations", instructor_conversations_path(course_material_id: course_material.id),
                                class: "text-xs text-blue-600 hover:text-blue-800" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No course materials available</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>