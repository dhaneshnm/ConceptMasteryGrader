<div class="max-w-6xl mx-auto px-6 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Course Materials</h1>
    <%= link_to "Upload New Material", new_course_material_path, 
        class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
  </div>
  
  <% if @course_materials.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @course_materials.each do |material| %>
        <div class="bg-white rounded-lg shadow-md border hover:shadow-lg transition-shadow">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900 truncate">
                <%= material.title %>
              </h3>
              <span class="<%= status_badge_class(material.status) %> px-2 py-1 text-xs font-medium rounded-full">
                <%= material.status.humanize %>
              </span>
            </div>
            
            <div class="text-sm text-gray-600 space-y-2">
              <div class="flex justify-between">
                <span>Uploaded:</span>
                <span><%= material.created_at.strftime("%b %d, %Y") %></span>
              </div>
              
              <% if material.processed? %>
                <div class="flex justify-between">
                  <span>Chunks:</span>
                  <span><%= material.chunks.count %></span>
                </div>
                
                <div class="flex justify-between">
                  <span>Summary:</span>
                  <span><%= material.summary.present? ? "Generated" : "Pending" %></span>
                </div>
              <% end %>
            </div>
            
            <div class="mt-4 flex space-x-2">
              <%= link_to "View Details", material, 
                  class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-2 px-3 rounded text-center transition-colors text-sm" %>
              
              <%= link_to "Delete", material, 
                  method: :delete,
                  data: { 
                    confirm: "Are you sure? This will delete all associated data.",
                    turbo_method: :delete
                  },
                  class: "bg-red-100 hover:bg-red-200 text-red-800 font-medium py-2 px-3 rounded transition-colors text-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="mx-auto h-12 w-12 text-gray-400 mb-4">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No course materials yet</h3>
      <p class="text-gray-500 mb-6">Upload your first PDF to get started with AI-powered evaluation.</p>
      <%= link_to "Upload Course Material", new_course_material_path, 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>

<% content_for :helpers do %>
  <%
    def status_badge_class(status)
      case status.to_s
      when 'uploaded'
        'bg-yellow-100 text-yellow-800'
      when 'processed'
        'bg-green-100 text-green-800'
      else
        'bg-gray-100 text-gray-800'
      end
    end
  %>
<% end %>