<div class="space-y-8">
  <div class="section-header">
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6">
      <div>
        <h1 class="text-4xl font-bold text-neutral-800 mb-2">Course Materials</h1>
        <p class="text-lg text-neutral-600">Manage and organize your educational content</p>
      </div>
      <%= link_to "Upload New Material", new_course_material_path, 
          class: "btn-primary btn-hover-lift" %>
    </div>
  </div>
  
  <% if @course_materials.any? %>
    <div class="grid-responsive">
      <% @course_materials.each do |material| %>
        <div class="card card-hover">
          <div class="card-body">
            <div class="flex items-start justify-between mb-6">
              <h3 class="text-xl font-semibold text-neutral-800 leading-tight flex-1 mr-4">
                <%= material.title %>
              </h3>
              <span class="status-badge <%= status_badge_class(material.status) %> flex-shrink-0">
                <%= material.status.humanize %>
              </span>
            </div>
            
            <div class="space-y-3 text-sm text-neutral-600 mb-6">
              <div class="flex justify-between items-center">
                <span class="font-medium">Files:</span>
                <span><%= pluralize(material.files.count, 'file') %></span>
              </div>
              
              <div class="flex justify-between items-center">
                <span class="font-medium">Uploaded:</span>
                <span><%= material.created_at.strftime("%b %d, %Y") %></span>
              </div>
              
              <% if material.processed? %>
                <div class="flex justify-between items-center">
                  <span class="font-medium">Chunks:</span>
                  <span><%= material.chunks.count %></span>
                </div>
                
                <div class="flex justify-between items-center">
                  <span class="font-medium">Summary:</span>
                  <span class="<%= material.summary.present? ? 'text-primary-600 font-medium' : 'text-secondary-600' %>">
                    <%= material.summary.present? ? "Generated" : "Pending" %>
                  </span>
                </div>
              <% end %>
            </div>
            
            <div class="flex space-x-3 mt-6">
              <%= link_to "View Details", material, 
                  class: "flex-1 bg-neutral-100 hover:bg-neutral-200 text-neutral-800 font-medium py-3 px-4 rounded-xl text-center transition-all duration-200 hover:shadow-soft" %>
              
              <%= link_to "Delete", material, 
                  method: :delete,
                  data: { 
                    confirm: "Are you sure? This will delete all associated data.",
                    turbo_method: :delete
                  },
                  class: "bg-red-50 hover:bg-red-100 text-red-700 font-medium py-3 px-4 rounded-xl transition-all duration-200 hover:shadow-soft" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <div class="mx-auto h-16 w-16 text-neutral-400 mb-6">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-full h-full">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <h3 class="text-2xl font-semibold text-neutral-800 mb-3">No course materials yet</h3>
      <p class="text-lg text-neutral-600 mb-8 max-w-md mx-auto">Upload your first PDF to get started with AI-powered evaluation and intelligent assessment tools.</p>
      <%= link_to "Upload Course Material", new_course_material_path, 
          class: "btn-primary btn-hover-lift" %>
    </div>
  <% end %>
</div>
