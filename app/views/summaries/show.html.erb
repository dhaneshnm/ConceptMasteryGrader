<div class="max-w-4xl mx-auto px-6 py-8">
  <div class="mb-8">
    <%= link_to "â† Back to #{@course_material.title}", @course_material, 
        class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>
  
  <div class="bg-white rounded-lg shadow-md border">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Course Summary</h1>
          <p class="text-sm text-gray-600 mt-1"><%= @course_material.title %></p>
        </div>
        <div class="flex space-x-2">
          <%= link_to "Regenerate", [@course_material, :summary], 
              method: :post,
              data: { confirm: "This will replace the existing summary. Continue?" },
              class: "text-sm bg-blue-100 hover:bg-blue-200 text-blue-800 font-medium py-1 px-3 rounded transition-colors" %>
          <%= link_to "Delete", [@course_material, @summary], 
              method: :delete,
              data: { confirm: "Are you sure you want to delete this summary?" },
              class: "text-sm bg-red-100 hover:bg-red-200 text-red-800 font-medium py-1 px-3 rounded transition-colors" %>
        </div>
      </div>
    </div>
    
    <div class="p-6">
      <div class="prose max-w-none">
        <%= simple_format(@summary.content, class: "text-gray-700 leading-relaxed") %>
      </div>
      
      <div class="mt-8 pt-6 border-t border-gray-200">
        <div class="grid gap-4 md:grid-cols-3 text-sm text-gray-600">
          <div>
            <span class="font-medium">Generated:</span>
            <%= @summary.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
          <div>
            <span class="font-medium">Length:</span>
            <%= @summary.content.length %> characters
          </div>
          <div>
            <span class="font-medium">Chunks analyzed:</span>
            <%= @course_material.chunks.count %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="mt-8 bg-white rounded-lg shadow-md border">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Next Steps</h2>
      <p class="text-sm text-gray-600">What you can do with this course material</p>
    </div>
    <div class="p-6">
      <div class="grid gap-4 md:grid-cols-2">
        <div class="bg-purple-50 rounded-lg p-4 border border-purple-200">
          <h3 class="font-medium text-purple-900 mb-2">Generate Rubrics</h3>
          <p class="text-sm text-purple-700 mb-3">
            Create assessment rubrics based on the key concepts identified in this summary.
          </p>
          <%= form_with url: generate_course_material_rubrics_path(@course_material), method: :post, local: true, class: "inline-block" do |form| %>
            <%= form.submit "Generate Rubrics", 
                class: "text-sm bg-purple-600 hover:bg-purple-700 text-white font-medium py-1 px-3 rounded transition-colors cursor-pointer" %>
          <% end %>
        </div>
        
        <div class="bg-green-50 rounded-lg p-4 border border-green-200">
          <h3 class="font-medium text-green-900 mb-2">Start Evaluation</h3>
          <p class="text-sm text-green-700 mb-3">
            Begin interactive student evaluations using this course material.
          </p>
          <%= link_to "Start Evaluation", "#", 
              class: "text-sm bg-green-600 hover:bg-green-700 text-white font-medium py-1 px-3 rounded transition-colors" %>
        </div>
      </div>
    </div>
  </div>
</div>