<!-- Instructor Conversations Management View -->
<div class="min-h-screen bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <%= link_to "â† Dashboard", instructor_dashboard_index_path, class: "text-blue-600 hover:text-blue-800 mr-4" %>
            <h1 class="text-xl font-semibold text-gray-900">Conversations</h1>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Filters and Actions -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
          <!-- Filters -->
          <div class="flex flex-col sm:flex-row sm:items-center space-y-3 sm:space-y-0 sm:space-x-4">
            <%= form_with url: instructor_conversations_path, method: :get, local: false, class: "flex flex-wrap items-center space-x-3" do |f| %>
              <%= f.select :status, 
                          options_for_select([
                            ['All Conversations', ''],
                            ['Evaluated', 'evaluated'],
                            ['Pending Evaluation', 'pending'],
                            ['Need Attention', 'needs_attention']
                          ], params[:status]), 
                          {}, 
                          { class: "rounded-md border-gray-300 py-2 pl-3 pr-10 text-sm focus:border-blue-500 focus:ring-blue-500" } %>
              
              <%= f.select :course_material_id,
                          options_from_collection_for_select(CourseMaterial.all, :id, :title, params[:course_material_id]),
                          { prompt: 'All Course Materials' },
                          { class: "rounded-md border-gray-300 py-2 pl-3 pr-10 text-sm focus:border-blue-500 focus:ring-blue-500" } %>
              
              <%= f.submit "Filter", class: "bg-blue-600 text-white px-4 py-2 rounded-md text-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            <% end %>
          </div>
          
          <!-- Batch Actions -->
          <div class="mt-3 sm:mt-0">
            <div id="batch_actions">
              <%= button_to "Batch Evaluate Selected", instructor_batch_evaluate_path,
                          method: :post,
                          form: { 
                            data: { 
                              turbo_confirm: "Evaluate all selected conversations?",
                              conversation_ids: [] 
                            } 
                          },
                          class: "bg-green-600 text-white px-4 py-2 rounded-md text-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500",
                          disabled: true,
                          id: "batch_evaluate_btn" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Conversations List -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="mb-4 flex items-center justify-between">
          <h2 class="text-lg font-medium text-gray-900">
            Conversations 
            <span class="text-sm text-gray-500">(<%= @conversations.total_count %> total)</span>
          </h2>
          <div class="text-sm text-gray-500">
            Showing <%= @conversations.offset_value + 1 %>-<%= [@conversations.offset_value + @conversations.limit_value, @conversations.total_count].min %> of <%= @conversations.total_count %>
          </div>
        </div>

        <% if @conversations.any? %>
          <div class="space-y-4" id="conversations_list">
            <% @conversations.each do |conversation| %>
              <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors" id="conversation_<%= conversation.id %>">
                <div class="flex items-start justify-between">
                  <div class="flex items-start space-x-3 flex-1">
                    <!-- Selection Checkbox -->
                    <input type="checkbox" 
                           class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded conversation-checkbox" 
                           data-conversation-id="<%= conversation.id %>">
                    
                    <!-- Student Info -->
                    <div class="flex-1">
                      <div class="flex items-center justify-between mb-2">
                        <h3 class="text-lg font-medium text-gray-900"><%= conversation.student.name %></h3>
                        <div class="flex items-center space-x-3">
                          <!-- Evaluation Status -->
                          <% if conversation.grade_reports.any? %>
                            <% latest_report = conversation.grade_reports.order(created_at: :desc).first %>
                            <div class="flex items-center space-x-2">
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                Evaluated
                              </span>
                              <span class="text-lg font-bold <%= latest_report.overall_score >= 0.7 ? 'text-green-600' : 'text-red-600' %>">
                                <%= (latest_report.overall_score * 100).round %>%
                              </span>
                            </div>
                          <% else %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                              Pending
                            </span>
                          <% end %>
                          
                          <!-- Actions -->
                          <div class="flex space-x-2">
                            <%= link_to "View", [conversation.course_material, conversation],
                                        class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
                            
                            <% unless conversation.grade_reports.any? %>
                              <%= button_to "Evaluate", [conversation.course_material, conversation, :grade_reports],
                                            method: :post,
                                            data: { turbo_method: :post },
                                            class: "text-green-600 hover:text-green-800 text-sm font-medium bg-transparent border-none p-0" %>
                            <% else %>
                              <%= link_to "Report", [conversation.course_material, conversation, conversation.grade_reports.order(created_at: :desc).first],
                                          class: "text-purple-600 hover:text-purple-800 text-sm font-medium" %>
                            <% end %>
                          </div>
                        </div>
                      </div>
                      
                      <!-- Course Material and Metadata -->
                      <div class="mb-3">
                        <p class="text-sm text-gray-600 font-medium"><%= conversation.course_material.title %></p>
                        <p class="text-xs text-gray-500"><%= conversation.student.email %></p>
                      </div>
                      
                      <!-- Conversation Stats -->
                      <div class="flex items-center space-x-6 text-xs text-gray-500">
                        <span class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                          </svg>
                          <%= conversation.messages.count %> messages
                        </span>
                        <span class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                          </svg>
                          <%= conversation.messages.from_user.count %> student responses
                        </span>
                        <span class="flex items-center">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          Updated <%= time_ago_in_words(conversation.updated_at) %> ago
                        </span>
                        
                        <!-- Quality Indicators -->
                        <% if conversation.grade_reports.any? %>
                          <% latest_report = conversation.grade_reports.order(created_at: :desc).first %>
                          <% if latest_report.overall_score < 0.5 %>
                            <span class="flex items-center text-red-600">
                              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                              </svg>
                              Needs attention
                            </span>
                          <% end %>
                        <% end %>
                      </div>
                      
                      <!-- Last Message Preview -->
                      <% if conversation.messages.any? %>
                        <div class="mt-3 p-2 bg-gray-50 rounded text-xs text-gray-600">
                          <strong>Last message:</strong> 
                          <%= truncate(conversation.messages.order(created_at: :desc).first.content, length: 150) %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          
          <!-- Pagination -->
          <div class="mt-6">
            <%= paginate @conversations %>
          </div>
          
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No conversations</h3>
            <p class="mt-1 text-sm text-gray-500">No conversations match your current filters.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript for batch operations -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const checkboxes = document.querySelectorAll('.conversation-checkbox');
    const batchBtn = document.getElementById('batch_evaluate_btn');
    
    function updateBatchButton() {
      const selectedIds = Array.from(checkboxes)
        .filter(cb => cb.checked)
        .map(cb => cb.dataset.conversationId);
      
      batchBtn.disabled = selectedIds.length === 0;
      batchBtn.form.dataset.conversationIds = selectedIds.join(',');
    }
    
    checkboxes.forEach(checkbox => {
      checkbox.addEventListener('change', updateBatchButton);
    });
  });
</script>